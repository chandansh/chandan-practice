package com.coleg;

import java.io.IOException;

import javax.portlet.ActionRequest;
import javax.portlet.ActionResponse;
import javax.portlet.PortletException;
import javax.portlet.RenderRequest;
import javax.portlet.RenderResponse;

import com.coleg.model.Employee;
import com.coleg.service.EmployeeLocalServiceUtil;
import com.coleg.service.impl.EmployeeLocalServiceImpl;
import com.coleg.service.impl.EmployeeServiceImpl;
import com.liferay.portal.kernel.util.ParamUtil;
import com.liferay.util.bridges.mvc.MVCPortlet;

/**
 * Portlet implementation class HelloPortlet
 */
public class HelloPortlet extends MVCPortlet {
	@Override
	public void doView(RenderRequest renderRequest,
			RenderResponse renderResponse) throws IOException, PortletException {
		System.out.println("[do-view]doView Called...... ");
		super.doView(renderRequest, renderResponse);
	}

	@Override
	public void processAction(ActionRequest actionRequest,
			ActionResponse actionResponse) throws IOException, PortletException {
		System.out.println("[processAction] called...");
		// String name = actionRequest.getParameter("name");
		String name = ParamUtil.getString(actionRequest, "name");
		String address=ParamUtil.getString(actionRequest,"add");
		actionResponse.setRenderParameter("username", name);
		System.out.println("Name: " + name+"\n Address: "+address);
		try
		{
			Employee emp=EmployeeLocalServiceUtil.createEmployee("emp12");
			emp.setName(name);
			emp.setAddress(address);
			EmployeeLocalServiceUtil.updateEmployee(emp);
			System.out.println("New Employee added...  ");
		}
		catch(Exception e)
		{
			
		}
		super.processAction(actionRequest, actionResponse);
	}

}
