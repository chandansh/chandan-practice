<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:VerticalPanel>
		<g:HorizontalPanel>
			<g:Label>Name : </g:Label>
			<g:TextBox ui:field='text1'>Enter Your Name</g:TextBox>
		</g:HorizontalPanel>

		<g:HorizontalPanel>
			<g:Label>Address : </g:Label>
			<g:TextBox ui:field='text2'>Enter Your Address</g:TextBox>
		</g:HorizontalPanel>

		<g:ListBox ui:field='listBox' visibleItemCount='1' />

		<g:Button ui:field='submit'> Submit </g:Button>
	</g:VerticalPanel>
</ui:UiBinder>